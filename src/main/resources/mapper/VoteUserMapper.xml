<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xj.votetest.dao.VoteUserMapper" >
    <resultMap id="VoteUser" type="com.xj.votetest.pojo.VoteUser">
        <result column="uid" property="uid" jdbcType="INTEGER" />
        <result column="uname" property="uname" jdbcType="VARCHAR" />
        <result column="pwd" property="pwd" jdbcType="VARCHAR" />
    </resultMap>

    <select id="findUserByName" parameterType="String" resultMap="VoteUser">
      SELECT * FROM voteuser where uname=#{uname}
    </select>

    <!-- 添加新用户 -->
    <insert id="addNewUser" parameterType="com.xj.votetest.pojo.VoteUser">
        INSERT INTO voteuser(uname,pwd) VALUES (#{uname},#{pwd})
    </insert>
</mapper>